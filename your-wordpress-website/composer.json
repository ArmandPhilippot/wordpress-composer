{
  "name": "armandphilippot/wordpress-composer",
  "description": "WordPress installation using Composer.",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Armand Philippot",
      "email": "contact@armandphilippot.com",
      "homepage": "https://www.armandphilippot.com/"
    }
  ],
  "type": "project",
  "require": {
    "composer/installers": "^1.10",
    "wordpress/wordpress": "5.7.1",
    "inpsyde/wp-translation-downloader": "^2.0",
    "wpackagist-theme/twentytwenty": "*",
    "wpackagist-plugin/akismet": "^4.1.5"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    },
    {
      "type": "package",
      "package": {
        "name": "wordpress/wordpress",
        "type": "webroot",
        "version": "5.7.1",
        "source": {
          "url": "https://github.com/WordPress/WordPress.git",
          "type": "git",
          "reference": "5.7.1"
        },
        "require": {
          "fancyguy/webroot-installer": "^1.0.0"
        }
      }
    },
    {
      "type": "composer",
      "url": "https://wp-languages.github.io"
    }
  ],
  "config": {
    "vendor-dir": "htdocs/wp-content/vendor"
  },
  "extra": {
    "installer-paths": {
      "htdocs/wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "htdocs/wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ],
      "htdocs/content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ]
    },
    "webroot-dir": "htdocs/wp",
    "webroot-package": "wordpress/wordpress",
    "wordpress-install-dir": "htdocs/wp",
    "wp-translation-downloader": {
      "languages": [
        "fr_FR"
      ],
      "directory": "htdocs/wp-content/languages"
    }
  }
}
